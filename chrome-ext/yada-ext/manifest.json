{
  "name": "The Yada",
  "description": "pop over news article summaries",
  "version": "2.0",
  "permissions": [
    "tabs",
    "activeTab",
    "http://tiny-tiny.herokuapp.com/*/*",
    "contextMenus"
  ],
  "background": {
    "scripts": [
      "js/background.js",
      "js/context-menu.js"
    ],
    "persistent": false
  },
  "icons": {
    "16": "assets/yada-icon.png",
    "48": "assets/yada-icon.png",
    "128": "assets/yada-icon.png"
  },
  "browser_action": {
    "default_title": "The Yada",
    "default_icon": "assets/yada-icon.png"
  },
  "manifest_version": 2,
  "web_accessible_resources": [
    "yada.html",
    "css/frame.css",
    "js/app.js"
  ]

}
